<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:id="@+id/rlMainContainer_WI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cvMainContainer_WI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:id="@+id/rlNameContainer_WI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNumber_WI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_number"
                    android:fontFamily="@font/firasans_regular"
                    android:paddingBottom="6dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    tools:text="1."
                    />

                <TextView
                    android:id="@+id/tvName_WI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/tvNumber_WI"
                    android:background="@drawable/bg_name"
                    android:ellipsize="end"
                    android:fontFamily="@font/firasans_regular"
                    android:maxLines="1"
                    android:paddingBottom="6dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    tools:text="Push Up"
                    />

                <TextView
                    android:id="@+id/tvRepeat_WI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tvNumber_WI"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/firasans_blackitalic"
                    android:paddingBottom="8dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/blue_grey_900"
                    android:textSize="15sp"
                    tools:text="Repetitions: 10"
                    />

                <RelativeLayout
                    android:id="@+id/rlChallengeRepeat_WI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNumber_WI"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvChallHeader_WI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_toStartOf="@id/tvLow_WI"
                        android:fontFamily="@font/firasans_blackitalic"
                        android:paddingBottom="8dp"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blue_grey_900"
                        android:textSize="15sp"
                        tools:text="Repetitions:"
                        />

                    <TextView
                        android:id="@+id/tvLow_WI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_toStartOf="@id/tvMiddle_WI"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ic_star_red"
                        android:fontFamily="@font/firasans_blackitalic"
                        android:paddingBottom="8dp"
                        android:paddingEnd="4dp"
                        android:paddingStart="0dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blue_grey_900"
                        android:textSize="15sp"
                        tools:text="0-2"
                        />

                    <TextView
                        android:id="@+id/tvMiddle_WI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tvHigh_WI"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ic_star_orange"
                        android:fontFamily="@font/firasans_blackitalic"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blue_grey_900"
                        android:textSize="15sp"
                        tools:text="3-5"
                        />

                    <TextView
                        android:id="@+id/tvHigh_WI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ic_star_green"
                        android:fontFamily="@font/firasans_blackitalic"
                        android:paddingBottom="8dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="4dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blue_grey_900"
                        android:textSize="15sp"
                        tools:text="6+"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <r4mstein.ua.thenxworkouts.root.player.VideoPlayer
            android:id="@+id/vpPlayer_WI"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/cvMainContainer_WI"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>