<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvTitle_DG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dlg_title"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        tools:text="Great Title"
        />

    <TextView
        android:id="@+id/tvMessage_DG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle_DG"
        android:background="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        tools:text="Cool message"
        />

    <RelativeLayout
        android:id="@+id/rlButtonsContainer_DG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage_DG"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/btnPositive_DG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_regular"
            android:padding="16dp"
            android:text="@string/text_ok"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/btnNegative_DG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btnPositive_DG"
            android:fontFamily="@font/montserrat_regular"
            android:padding="16dp"
            android:text="@string/text_cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:visibility="gone"
            />

    </RelativeLayout>

</RelativeLayout>