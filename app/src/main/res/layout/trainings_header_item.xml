<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_header_item"
    >

    <TextView
        android:id="@+id/tvHeader_THI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/firasans_black"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/white_alpha_85"
        android:textSize="20sp"
        tools:text="Part 1"
        />

    <ImageView
        android:id="@+id/ivArrow_THI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22dp"
        tools:src="@drawable/ic_arrow_down"
        />

</RelativeLayout>