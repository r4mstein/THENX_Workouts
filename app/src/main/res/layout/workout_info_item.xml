<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">

    <RelativeLayout
        android:id="@+id/rlMainContainer_WII"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvPart_WII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/firasans_black"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Part 1"
            />

        <TextView
            android:id="@+id/tvDay_WII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvPart_WII"
            android:layout_toEndOf="@id/tvPart_WII"
            android:fontFamily="@font/firasans_black"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Day 1"
            />

        <TextView
            android:id="@+id/tvName_WII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvPart_WII"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/tvDay_WII"
            android:ellipsize="end"
            android:fontFamily="@font/firasans_black"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Whole Body"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvDescription_WII"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlMainContainer_WII"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/firasans_regular"
        android:text="@string/workout_description"
        android:textColor="@color/blue_grey_700"
        android:textSize="16sp"
        />

</RelativeLayout>